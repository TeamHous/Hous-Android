<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="profileData"
            type="com.hous.hous_aos.ui.home.ProfileData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/iv_profile_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_g2_fill_10_rect"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile"
            app:layout_constraintEnd_toEndOf="@id/iv_profile"
            app:layout_constraintStart_toStartOf="@id/iv_profile"
            app:layout_constraintTop_toTopOf="@id/iv_profile" />

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingTop="13dp"
            android:paddingBottom="35dp"
            android:src="@drawable/ic_profile_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="34dp"
            android:layout_marginTop="73dp"
            android:layout_marginBottom="11dp"
            android:text="@{profileData.name}"
            android:textAppearance="@style/Description"
            android:textColor="@color/hous_black"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile_bg"
            app:layout_constraintEnd_toEndOf="@id/iv_profile_bg"
            app:layout_constraintStart_toStartOf="@id/iv_profile_bg"
            app:layout_constraintTop_toTopOf="@id/iv_profile_bg"
            tools:text="이영주" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>



